{
  "name": "FlankerResult",
  "type": "object",
  "properties": {
    "student_name": {
      "type": "string",
      "description": "Name of the student participant"
    },
    "student_id": {
      "type": "string",
      "description": "Student ID or identifier"
    },
    "trial_number": {
      "type": "number",
      "description": "Sequential trial number"
    },
    "stimulus_type": {
      "type": "string",
      "enum": [
        "congruent",
        "incongruent"
      ],
      "description": "Type of flanker stimulus presented"
    },
    "stimulus_display": {
      "type": "string",
      "description": "The actual stimulus shown (e.g., '<<<<<', '><><>')"
    },
    "correct_response": {
      "type": "string",
      "enum": [
        "left",
        "right"
      ],
      "description": "The correct response direction"
    },
    "participant_response": {
      "type": "string",
      "enum": [
        "left",
        "right",
        "timeout"
      ],
      "description": "The participant's actual response"
    },
    "reaction_time": {
      "type": "number",
      "description": "Reaction time in milliseconds"
    },
    "is_correct": {
      "type": "boolean",
      "description": "Whether the response was correct"
    },
    "session_start_time": {
      "type": "string",
      "format": "date-time",
      "description": "When the session started"
    }
  },
  "required": [
    "student_name",
    "trial_number",
    "stimulus_type",
    "stimulus_display",
    "correct_response",
    "participant_response",
    "reaction_time",
    "is_correct",
    "session_start_time"
  ]
}